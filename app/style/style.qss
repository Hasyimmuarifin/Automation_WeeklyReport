/* =================================== Global Settings =================================== */
QMainWindow{
    background-color: #f0f4f8;
    color: #1c1c1c;
    font-family: "Segoe UI", "Arial", sans-serif;
    font-size: 11pt;
    border-image: url(assets/bg.png);
    background-repeat: no-repeat;
    background-position: center;
    background-origin: content;
}

QDialog {
    background-color:rgb(255, 255, 255);
    color: #1c1c1c;
    font-family: "Segoe UI", "Arial", sans-serif;
}

/* ============================== QPushButton - General Styles ============================== */
QPushButton {
    background-color: transparent;
    color: black;
    border-radius: 5px;
    font-weight: bold;
}


QPushButton:hover {
    background-color: #d0e5f5;
    border: 1px solid #999999;  /* Darker gray */
}

QPushButton:pressed {
    background-color: #a9cce3;
}

/* ============================== Specific QPushButton Styles ============================== */
QPushButton#startButton {
    background-color: rgb(0, 170, 255);  /* Blue */
    color: white;
    border-radius: 10px;
}

QPushButton#pushButton_Home {
    background-color: transparent;
    color: #CCCCCC;
    border-radius: 5px;
    font-weight; bold;
}

QPushButton#pushButton_Home:pressed, 
QPushButton#pushButton_Home:checked {
    background-color: rgb(40, 56, 74);
    color: white;
    font-size: 18px;
}

QPushButton#pushButton_Performance {
    background-color: transparent;
    color: #CCCCCC;
    border-radius: 5px;
    font-weight; bold;
}

QPushButton#pushButton_Performance:pressed, 
QPushButton#pushButton_Performance:checked {
    background-color: rgb(40, 56, 74);
    color: white;
    font-size: 18px;
}

QPushButton#pushButton_3rdParty {
    background-color: transparent;
    color: #CCCCCC;
    border-radius: 5px;
    font-weight; bold;
}

QPushButton#pushButton_3rdParty:pressed, 
QPushButton#pushButton_3rdParty:checked {
    background-color: rgb(40, 56, 74);
    color: white;
    font-size: 18px;
}

QPushButton#btn_summary,
QPushButton#btn_final {
    background-color: rgb(117, 146, 177);
    color: white;
    border-radius: 5px;
}

QPushButton#pushButton_submit {
    background-color: rgb(117, 146, 177);
    color: white;
    border-radius: 10px;
    font-size: 20px;
}

QPushButton#pushButton_process {
    background: transparent;
    border: none;
}

QPushButton#pushButton_end {
    background-color: rgb(88, 124, 162);
    color: white;
    border-radius: 10px;
}

QPushButton#pushButton_ok {
    background-color: rgb(88, 124, 162);
    color: white;
    border-radius: 10px;
    font-weight: bold;
}

QPushButton#btn_send,
QPushButton#btn_cancel{
    background-color: rgb(41, 64, 88);
    color: white;
    border-radius: 10px;
    font-weight:bold;
}

QPushButton#pushButton_Raw3rdParty {
    background-color: rgb(88, 124, 162);
    color: white;
    border-radius: 5px;
}

QPushButton#pushButton_Draft3rdParty {
    background-color: rgb(88, 124, 162);
    color: white;
    border-radius: 5px;
}

QPushButton#pushButton_Start3rdParty {
    background-color: rgb(88, 124, 162);
    color: white;
    border-radius: 10px;
}


/* ============================== Input Fields - QLineEdit, QComboBox, QSpinBox ============================== */
QLineEdit, QSpinBox, QComboBox{
    background-color: #FFFFFF;
    color: #111827;
    border: 2px solid #CBD5E1;
    border-radius: 6px;
    padding: 6px 10px;
    font-size: 13px;
}

QComboBox QAbstractItemView {
    background-color: #ffffff;
    border: 1px solid #b0b0b0;
    selection-background-color: #d7e9f5;
    selection-color: #1c1c1c;
}

QComboBox QAbstractItemView::item {
    color: #1c1c1c;
}

/* QSpinBox Buttons */
QSpinBox::up-button, QSpinBox::down-button {
    color: #014f86;
}

QSpinBox::line {
    color: #1c1c1c;
}

QCheckBox#checkBox_enableMonth4 {
    color: black;
}

QCheckBox#checkBox_enableMonth4:checked {
    color: rgb(0, 170, 255);
}

/* ============================== QLabel Styles ============================== */
QLabel {
    color:rgb(255, 255, 255);
}

QLabel#label_2 {
    color: rgb(255, 255, 255);
    font-size: 23px;
}

QLabel#label_3{
    color: #E6F0FF;
}

QLabel#label_4{
    color:rgb(255, 255, 255);
}

QLabel#label_10 {
    color:rgb(255, 255, 255);
}

QLabel#label_24{
    color:rgb(255, 255, 255);
}

QLabel#label_26{
    color:rgb(255, 255, 255);
}



/* ============================== QTextEdit Styles ============================== */
QTextEdit {
    background-color: #ffffff;
    border: 1px solid #b0b0b0;
    border-radius: 6px;
    color: #1c1c1c;
    padding: 6px;
}

/* ============================== QStackedWidget Styles ============================== */
QStackedWidget {
    background-color: rgba(0, 0, 0, 0.2);
    border-radius: 5px;
}

/* ============================== QFileDialog Styles ============================== */
QFileDialog {
    background-color: #ffffff;
    color: #1c1c1c;
}

/* ============================== ToolTip Styles ============================== */
QToolTip {
    background-color: #e0f0ff;
    color: #1c1c1c;
    border: 1px solid #b0b0b0;
    padding: 4px;
    border-radius: 4px;
}

/* ============================== ScrollBar Styles ============================== */
QScrollBar:vertical {
    background: #f0f4f8;
    width: 10px;
    margin: 2px;
    border-radius: 5px;
}

QScrollBar::handle:vertical {
    background: #b0b0b0;
    border-radius: 5px;
}

QScrollBar::handle:vertical:hover {
    background: #999999;
}

/* ============================== QDialog Styles ============================== */
QDialog {
    background-color: #f0f4f8;
    color: #1c1c1c;
    font-family: "Segoe UI", "Arial", sans-serif;
    font-size: 11pt;
    border-radius: 12px;
    padding: 20px;
}

QDialog QFormLayout {
    background-color: #ffffff;
    padding: 10px;
}

QDialog QLabel {
    color: #1d2d44;
}

QDialog QPushButton {
    background-color: #eaf3fb;
    color: #1d2d44;
    font-weight: 500;
    border-radius: 5px;
    padding: 8px 15px;
}

QDialog QPushButton:hover {
    background-color: #d0e5f5;
    border: 1px solid #999999;  /* Darker gray */
}

QDialog QPushButton:pressed {
    background-color: #a9cce3;
}
